<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
            type="email" 
            name="email"
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')" 
        >           
    </div>
</div>

<div class="item">
    <div>Passaword</div>
    <div class="input">
        <input 
            type="password" 
            name="password"
        >           
    </div>
</div>

<div class="item">
    <div>Passaword Repeat</div>
    <div class="input">
        <input 
            type="password" 
            name="passwordRepeat"
        >           
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">