{% extends "layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}

{% call card.render('Forgot Password', 'password container') %}

    <form method="POST" action="/session/forgot-password">
        <div class="fields">
            <div class="item">
                <div>Email</div>
                <div class="input">
                    <input 
                        type="email" 
                        name="email"
                        value="{{user.email}}"
                        onblur="Validate.apply(this, 'isEmail')" 
                    >           
                </div>
            </div>
        </div>

        <button class="button" type="submit">Recovery Password</button>
    </form>


{% endcall %}

{% endblock content %}