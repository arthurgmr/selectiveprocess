{% extends "layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}

{% call card.render('Ficha de Inscrição', 'user-edit container') %}

    <form 
        method="POST" 
        action="
            {% if session.userIdAdmin %} 
                /admin/user/{{ user.id }}?_method=PUT
            {% else %}
                /users/edit?_method=PUT
            {% endif %}
        "
    >

        <div class="fields">

            {% include 'users/fields.njk' %} 

            <input 
                type="hidden" 
                name="id" 
                value={{user.id}}>

        </div>

        <button class="button edit" type="submit" onclick="Validate.allFields(event)">Atualizar</button>
    </form>
    <a href="/users">Voltar</a>

{% endcall %}


{% endblock content %}